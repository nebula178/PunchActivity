/* 打卡首页 */
/* 头部 */
page{
  height: 100%;
  background-color: #1e968e; 
}

.create,.my{  
  height: 420rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
/* 创建打卡标题 */
.create .header,.my .mine{
  height: 130rpx;
  width: 100%;
  background-color: rgb(250, 231, 219);
  border: 3rpx solid rgb(139, 130, 130);
  border-bottom: 0;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  margin-top: 20rpx;
  line-height: 130rpx;
  box-sizing: border-box;
}

.create .header .creat,.my .mine .minee{
  margin-left: 20rpx;
  font-size: 50rpx;
}
/* 创建打卡 */
.create .classify{
  height:256rpx;
  width: 100%;
  background-color: rgb(245, 236, 222);
  border: 3rpx solid rgb(139, 130, 130);
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}

.create .classify .classifya,.classifyb{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.create .classify .classifya{
  border-right: 3rpx solid rgb(139, 130, 130);
}

.my .join,.my .found{
  height: 120rpx;
  width: 100%;
  background-color: rgb(245, 236, 222);
  border: 3rpx solid rgb(139, 130, 130);
  line-height: 100rpx;
  padding-left: 10rpx;
  padding-right:40rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.my .join{
  border-bottom: 0;
}