/* 用户界面 */
page{
  height: 100%;
}
.header{
  height:600rpx;
  width: 100%;
  background-color: #3c7470; 
  border-bottom: 10rpx solid rgb(231, 227, 227);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.information{
  height: 200rpx;
  width: 80%;
  display: flex;
}

.picture{
  height:180rpx;
  width: 180rpx;
  border: 5rpx solid rgb(138, 129, 129);
  border-radius: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

image{
  height: 180rpx;
  width: 180rpx;
  border-radius: 20rpx;
}

.name{
  font-size: 60rpx;
}

.arrow{
  font-size: 100rpx;
  color: rgb(95, 88, 88);
}

.quits{
  margin-top: 200rpx;
}