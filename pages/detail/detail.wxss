page{
  height: 100%;
  background-color: rgba(0,0,0,0.3);
  display: flex;
  padding-right: 80rpx;
  padding-left: 80rpx;
  justify-items: center;
  align-items: center;
  box-sizing: border-box;
}

.card_detail{
  background-image: url(https://636c-clock-4g6f5ppv9c26dde8-1318173528.tcb.qcloud.la/bg2.jpg?sign=e79c603e36286a3e6bc895ffcef3c062&t=1685039715);
  background-size: 100% 100%;
  height: 900rpx;
  width: 100%;
  padding: 90rpx 60rpx;
  box-sizing: border-box;
}

.header{
  height: 80rpx;
  font-size: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
}

.title{
  color: rgb(17, 104, 53);
  font-weight: 600;
}

.qr{
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

image{
  height: 45rpx;
  width: 45rpx;
}

.a{
  border-top:  8rpx solid rgb(218, 223, 189);
}

.main{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
}

.div{
  margin-bottom: 20rpx;
}

.right{
  margin-left: 15rpx;
  font-size: 38rpx;
}

.st{
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 2rpx 10rpx;
  border-bottom: 8rpx solid rgb(125, 158, 135);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
button{
  margin-top: 20rpx;
}